<Page x:Name="Credits1" x:Class="DiplomaLol.Credits"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DiplomaLol"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Credits">
    
    <Page.Background>
        <ImageBrush ImageSource="/images/back.jpg" Stretch="UniformToFill"></ImageBrush>
    </Page.Background>
    <Grid>
        <StackPanel>
        <TextBlock Text="О дипломной работе" Foreground="White" HorizontalAlignment="Center" FontSize="25" FontFamily="Segoe Print"/>
        <TextBlock Width="800" Margin="0,40,0,0" Text="Данная работа была выполнена студентом 4 курса Московского Авиационного Института группы 424Бк-17 Бабарыкиным Даниилом.
                                      Цель этой работы - приобрести навыки управления складом предприятием, используя минималистичную модель склада. Работа имеет 3 вида сложности, существуют возможности для победы и реализация проигрыша." Foreground="White" HorizontalAlignment="Stretch" FontSize="16" FontFamily="Segoe Print" TextWrapping="Wrap" LineHeight="10"/>
        <Button Click="Name_BackToMenu" Margin="0,280,150,0" Height="30" Width="125" Content="Back" HorizontalAlignment="Right" />
        </StackPanel>
    </Grid>
</Page>
