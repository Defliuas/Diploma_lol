<Page x:Name="Credits1" x:Class="DiplomaLol.Credits"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DiplomaLol"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Credits">

    <Page.Background>
        <ImageBrush ImageSource="/images/back.jpg" Stretch="UniformToFill"></ImageBrush>
    </Page.Background>
    <Grid>
        <StackPanel>
        <TextBlock Text="О дипломной работе" HorizontalAlignment="Center"/>
            <TextBlock Width="800" Margin="0,40,0,0" Text="Данная работа была выполнена студентом 4 курса Московского Авиационного Института группы 424Бк-17 Бабарыкиным Даниилом.   
                                                         Цель этой работы - приобрести навыки управления складом, используя минималистичную модель склада. Работа имеет 3 вида сложности, существуют возможности для победы и реализация проигрыша." 
                       HorizontalAlignment="Stretch" FontSize="22" TextWrapping="Wrap" LineHeight="10"/>
        <Button Click="Name_BackToMenu" Margin="0,180,150,0" Content="Back" HorizontalAlignment="Right" />
        </StackPanel>
    </Grid>
</Page>
